{
  "manifest_version": 3,
  "name": "Facebook to Notion Saver",
  "version": "1.0.0",
  "description": "Automatically save Facebook posts to Notion when you click Save",
  "permissions": [
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://*.facebook.com/*",
    "https://*.vercel.app/*",
    "http://localhost:*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://facebook.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
